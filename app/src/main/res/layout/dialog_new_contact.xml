<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <EditText
        android:id="@+id/edt_dialog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Họ tên:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edt_dialog_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại:"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_dialog_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <EditText
        android:id="@+id/edt_dialog_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ:"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_dialog_phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_dialog_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_dialog_address"
        android:layout_marginTop="16dp"
        android:text="Cancel"
        android:backgroundTint="@android:color/holo_red_light"/>

    <Button
        android:id="@+id/btn_dialog_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_dialog_address"
        android:layout_marginTop="16dp"
        android:text="Save"
        android:backgroundTint="@android:color/holo_green_light"/>
</androidx.constraintlayout.widget.ConstraintLayout>